{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "baseUrl": ".",
    "jsx": "react-jsxdev",
    "strict": true,
    "jsxImportSource": "types",
    "module": "es2020",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "types": ["./types", "@remix-run/router"],
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./**/*"]
}
